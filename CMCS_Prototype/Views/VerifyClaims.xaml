        Title="Verify Claims"
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Pending Claims"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <DataGrid x:Name="ClaimsDataGrid"
                      AutoGenerateColumns="False"
                      Height="350"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Lecturer Name" Binding="{Binding LecturerName}" Width="*"/>
                    <DataGridTextColumn Header="Hours Worked" Binding="{Binding HoursWorked}" Width="*"/>
                    <DataGridTextColumn Header="Hourly Rate" Binding="{Binding HourlyRate}" Width="*"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount}" Width="*"/>
                    <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="2*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                    <DataGridTextColumn Header="Document" Binding="{Binding SupportingDocumentPath}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10">
                <Button Content="Approve"
                        Click="ApproveClaim_Click"
                        Background="Green"
                        Foreground="White"
                        Width="150"
                        Margin="5"/>
                <Button Content="Reject"
                        Click="RejectClaim_Click"
                        Background="Red"
                        Foreground="White"
                        Width="150"
                        Margin="5"/>
                <Button x:Name="BackBtn"
                        Content="Back"
                        Background="Gray"
                        Foreground="White"
                        FontWeight="Bold"
                        Width="150"
                        Margin="5"
                        Click="BackBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
